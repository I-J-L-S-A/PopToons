<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ijlsa.poptoons.ui.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_serieDetailsFragment"
            app:destination="@id/serieDetailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ijlsa.poptoons.ui.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_serieDetailsFragment"
            app:destination="@id/serieDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ijlsa.poptoons.ui.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_serieDetailsFragment"
            app:destination="@id/serieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/serieDetailsFragment"
        android:name="com.ijlsa.poptoons.ui.fragments.SerieDetailsFragment"
        android:label="SerieDetailsFragment"
        tools:layout="@layout/fragment_serie_details">

        <argument
            android:name="serie"
            app:argType="com.ijlsa.poptoons.ui.model.Series" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.ijlsa.poptoons.ui.fragments.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_category">
        <argument
            android:name="category"
            app:argType="com.ijlsa.poptoons.ui.model.Categories" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ijlsa.poptoons.ui.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>
</navigation>